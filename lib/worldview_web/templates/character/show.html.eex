<h2>Show Character</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @character.name %>
  </li>

  <li>
    <strong>Archetype:</strong>
    <%= @character.archetype %>
  </li>

  <li>
    <strong>Career:</strong>
    <%= @character.career %>
  </li>

  <li>
    <strong>Player name:</strong>
    <%= @character.player_name %>
  </li>

  <li>
    <strong>Brawn:</strong>
    <%= @character.brawn %>
  </li>

  <li>
    <strong>Agility:</strong>
    <%= @character.agility %>
  </li>

  <li>
    <strong>Intellect:</strong>
