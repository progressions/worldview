  <li>
    <strong>Willpower:</strong>
    <%= @character.willpower %>
  </li>

  <li>
    <strong>Presence:</strong>
    <%= @character.presence %>
  </li>

  <li>
    <strong>Soak:</strong>
    <%= @character.soak %>
  </li>

  <li>
    <strong>Strain threshold:</strong>
    <%= @character.strain_threshold %>
  </li>

  <li>
    <strong>Strain:</strong>
    <%= @character.strain %>
  </li>

  <li>
    <strong>Wound threshold:</strong>
    <%= @character.wound_threshold %>
